<UserControl x:Class="FluiTec.Datev.Wpf.Wizard.DifferentialExportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FluiTec.Datev.Wpf.Wizard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
		<GroupBox Header="Bereits getätigte Exporte" Margin="5,5,5,5" BorderBrush="LightGray">
			<ListView ItemsSource="{Binding Path=(local:DifferentialExportModel.Exports)}" Margin="10,20,10,10" BorderThickness="0" VerticalAlignment="Stretch">
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Image Width="16" Height="16" Margin="0,0,10,0" Source="/Resources/Sort.png" />
							<TextBlock Text="{Binding Name}"/>
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</GroupBox>
	</Grid>
</UserControl>
